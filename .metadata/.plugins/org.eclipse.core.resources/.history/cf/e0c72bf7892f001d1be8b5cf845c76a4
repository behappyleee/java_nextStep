		try {
			
			
			
		} catch(Exception e) {
			e.printStackTrace();
		}
		return null;
	}
	
	
	
	public void selectInputStream(String selectLine) {
		
	};
	
	public void readAllInputStream() {
		InputStreamReader reader = new InputStreamReader(in);
    	BufferedReader br = new BufferedReader(reader);
		String line;
		
		try {
			while((line = br.readLine()) != null) {
				logger.debug("Í∞Å READ LINE : {} " , line);
			}
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
}
